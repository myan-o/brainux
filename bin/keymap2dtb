#!/bin/bash

keymap="$1"
dtb="$2"
dirname=${0%/*}

if [ $# -le 1 ]
then
  dtb="/boot/imx28-pwg5300.dtb"
  mount /dev/mmcblk1p1 /boot
fi


if [ -f $dtb ]
then
  dtb2=`mktemp`
  dts=`mktemp`
  dts2=`mktemp`
  dtc -I dtb -O dts $dtb > $dts 2> /dev/null
  cat $dts | ${dirname}/keymap2dts "$keymap" > $dts2
  dtc -I dts -O dtb $dts2 > $dtb2 2> /dev/null
  if [ -s "$dtb2" ]
  then
    cp "$dtb2" "$dtb"
  else
    echo "format error"
  fi
else
    echo "$dtb is not found"
fi

if [ $# -le 1 ]
then
  umount /boot
  reboot
fi
